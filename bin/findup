#!/bin/sh
# Upward find a file by name ($1) from current dir to root or up to other dir ($2).

set -e

path="$1"
up_to="$2"
curdir=`pwd`

while [[ "`pwd`" != "$up_to" && "`pwd`" != '/' ]]; do
    if eval "[[ -e $path ]]"; then
        echo "`pwd`/$path"
        break
    fi
    cd ..
done
cd $curdir
