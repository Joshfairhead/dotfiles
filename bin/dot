#!/usr/bin/env bash
# Entry point to control dotfiles operations

# -- Helpers ------------------------------------------------------------------

edit() {
  e $DOT
}

profile() {
  DOT_ZTRACE=true zsh -ci exit
  ztraceprof
}

case "$1" in
  edit)
    edit
    exit 0;;
  profile)
    profile
    exit 0;;
  *)
    ;;
esac


# -- Go dot! ------------------------------------------------------------------

command make -C $DOT $1 --no-print-directory
