#!/bin/sh
# Amend any commit keeping original message
# Usage: git-amend [<commit>]

amend_head() {
  git commit --amend -C HEAD
}

amend_past() {
  commit=$(git rev-parse $1)
  git commit --fixup ${commit}
  if [ $? -eq 0 ]; then
    GIT_SEQUENCE_EDITOR=true git rebase -i --autosquash ${commit}^
  fi
}

if [ -z $1 ]; then
  amend_head
else
  amend_past $1
fi
