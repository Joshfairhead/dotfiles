# Enable tracing for debuging
[[ $DOT_ZTRACE = true ]] && ztrace

# Configure ZSH before anything else
source $DOT/zsh/config.zsh

# Load local tweaks
if [[ -a ~/.localrc ]]; then
  source ~/.localrc
fi

# Load topics and external packages
source $DOT/zsh/zplug/zplugrc

# Disable tracing for debugging
[[ $DOT_ZTRACE = true ]] && ztraceoff
