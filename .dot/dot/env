#!/usr/bin/env bash
# Sets up the minimum sanitized environment for dot steps

export DOT=$HOME/.dotfiles
export PATH="$DOT/.dot/dot/bin:/usr/local/bin:/usr/bin:/bin"

export OS; OS=$(uname -s)
if [[ "$OS" == "Linux" ]]; then
  export PATH="$HOME/.linuxbrew/bin:$PATH"
fi

if [[ $MAKELEVEL ]]; then
  export MAKEPID=$PPID
fi
