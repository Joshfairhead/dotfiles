#!/usr/bin/env bash
# Pretty and quite silent package installer wrapper

progname=$(basename $0)
[[ -z "$DOT_TOPIC_LOGFILE_SUFFIX" ]] && DOT_TOPIC_LOGFILE_SUFFIX="dot.log"


# -- Core ----------------------------------------------------------------------

_pretty_install() {
  local package=$1
  local system=$2
  local cmd_install=$3
  local cmd_check=$4
  if [[ $(_is_installed "${cmd_check}" "${package}") == false ]]; then
    pprint info-go "Installing ${package} from ${system}"
    ${cmd_install} ${package} > /tmp/${package}.with-${system}.$DOT_TOPIC_LOGFILE_SUFFIX 2>&1
    if [[ $? != 0 ]]; then
      pprint info-error "Failed to install ${package}"
      exit 1
    fi
  fi
}

_is_installed() {
  local cmd_check=$1
  local package=$2
  local output
  local code
  output=$(${cmd_check} ${package} 2> /dev/null)
  code=$?
  [[ -z "${output}" ]] || [[ "${code}" != 0 ]] && echo false && return
  echo true
}


# -- System calls --------------------------------------------------------------

pbrew() {
  _pretty_install $1 "brew" "brew install" "brew ls --versions"
}

pnpm() {
  _pretty_install $1 "npm" "npm -g install" "npm -g list"
}

ppip() {
  _pretty_install $1 "pip" "syspip install --upgrade" "syspip show"
}


# ------------------------------------------------------------------------------

usage() {
  echo "usage: ${progname} system package"
  echo "  system:  package system to use: (brew | npm | pip)"
  echo "  package: the package to be installed"
}

case "$1" in
  brew)
    fn="pbrew";;
  npm)
    fn="pnpm";;
  pip)
    fn="ppip";;
  *)
    usage
    exit 1;;
esac

if [[ $# < 2 ]]; then
  usage
  exit 1
fi

${fn} "$2"
exit 0
