#!/usr/bin/env bash
# Pretty prints for dotfiles scripts

progname=$(basename $0)


# -- Top-level prints ----------------------------------------------------------

pp_section() {
  local pad=$(printf '%0.1s' '-'{1..80})
  local padlength=74
  local string=$2
  printf "$1\n# -- %s " "${string}"
  printf '%*.*s' 0 $((${padlength} - ${#string})) "${pad}"
  printf '%s\n'
}


# -- Step prints ---------------------------------------------------------------

pp_step_error() {
  printf "$1  [\033[0;31mFAIL\033[0m] $2"
}

pp_step_go() {
  printf "$1  [ \033[00;94m>>\033[0m ] $2"
}

pp_step_ok() {
  printf "$1  [ \033[00;32mOK\033[0m ] $2"
}

pp_step_user() {
  printf "$1  [ \033[0;33m??\033[0m ] $2 "
}


# -- Info prints ---------------------------------------------------------------

pp_info_error() {
  printf "$1      \033[0;31m><\033[0m $2"
}

pp_info_ok() {
  printf "$1      \033[00;32m::\033[0m $2"
}

pp_info_go() {
  printf "$1      .. $2"
}

pp_info_warn() {
  printf "$1      \033[0;33m !\033[0m $2"
}


# -- Tools ---------------------------------------------------------------------

pp_remove() {
  printf '\r\033[2K'
}

pp_newline() {
  printf '\n'
}

# ------------------------------------------------------------------------------


usage() {
  echo "usage: ${progname} type [-r] [string]"
  echo "  type:   section"
  echo "          step-error step-go step-ok step-user"
  echo "          info-error info-go info-ok info-warn"
  echo "          newline remove"
  echo "  -r:     remove previous line break"
  echo "  string: string to be printed"
}

# Print type check
case "$1" in
  # Top-level
  section)
    TYPE="pp_section";;

  # Steps
  step-error)
    TYPE="pp_step_error";;
  step-go)
    TYPE="pp_step_go";;
  step-ok)
    TYPE="pp_step_ok";;
  step-user)
    TYPE="pp_step_user";;

  # Steps
  info-error)
    TYPE="pp_info_error";;
  info-go)
    TYPE="pp_info_go";;
  info-ok)
    TYPE="pp_info_ok";;
  info-warn)
    TYPE="pp_info_warn";;

  # Tools
  newline)
    TYPE="pp_newline";;
  remove)
    TYPE="pp_remove";;

  *)
    usage
    exit 1;;
esac
shift

# Start of line option
if [[ $# > 1 ]]; then
  case "$1" in
    -r)
      SOL="\r\033[2K"
      shift;;
    *)
      usage
      exit 1;;
  esac
else
  SOL="\n"
fi

# Print call
${TYPE} ${SOL} "$1"
