# Set loading path files before anything else (defer: 0)
zplug "$DOT", from:local, \
  use:"*/path.zsh", \
  defer:0

# Set loading general interactive files (defer: 1)
zplug "$DOT", from:local, \
  use:"*/*.rc.zsh", \
  defer:1

# Set loading completion files after compinit (defer: 2)
zplug "$DOT", from:local, \
  use:"*/completion.zsh", \
  defer:2

# Install missing packages if needed
if ! zplug check; then
  zplug install
  zplug clear
fi

# Load everthing!
zplug load
